/* pages/write/write.wxss */
image{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.back{
  width: 100%;
  height: 100%;
  font-size: 1rem;
  position: absolute;
  padding: 0;
  margin: 0;
}
.title{
  width: 85%;
  height: 1.4rem;
  position: relative;
  text-align: center;
  margin: auto;
  line-height: 150%;
  top: 5%;
  font-size: 1.3rem;
  border:solid 1px #e29c45;
}

.content{
  width: 90%;
  position: relative;
  margin: auto;
  line-height: 150%;
  top: 7%;
  border:solid 1px #e29c45;
}

button{
  width: 55%;
  height: 3rem;
  position: relative;
  margin: auto;
  bottom: -10%;
  background: #ffc773;
  border-radius: 15px;
}